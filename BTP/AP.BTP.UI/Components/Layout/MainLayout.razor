@inherits LayoutComponentBase
@using System.Security.Claims

<div class="page">
    <AuthorizeView Roles ="Admin, Verantwoordelijke">
        <Authorized>
            <div class="sidebar">
                <NavMenu />
            </div>
        </Authorized>
    </AuthorizeView>

    <main>
        <AuthorizeView>
            <Authorized Context="authState">
                @{
                    var user = authState.User;
                }

                @if (user.IsInRole("Admin") || user.IsInRole("Verantwoordelijke"))
                {
                    <div class="top-row px-4">
                        <NavLink class="nav-link" href="/profile" Match="NavLinkMatch.All">
                            <i class="bi bi-person-fill"style="font-size:1.5rem"></i>
                        </NavLink>
                    </div>

                    <article class="content px-4">
                        @Body
                    </article>
                }
                else if (user.IsInRole("Medewerker"))
                {
                    <article class="content px-4">
                        <AP.BTP.UI.Components.Pages.MobileAppRedirect />
                    </article>
                }
                else
                {
                    <article class="content px-4">
                        <AP.BTP.UI.Components.Pages.LoginError />
                    </article>
                }
            </Authorized>

            <NotAuthorized>
                <AP.BTP.UI.Components.Pages.Login />
            </NotAuthorized>
        </AuthorizeView>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>
