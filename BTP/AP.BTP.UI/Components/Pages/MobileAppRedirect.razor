@page "/mobile-redirect"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<div class="login-page">
    <div class="brand">
        <img src="/Images/btp logo.png" alt="BTP" class="brand-logo" />
        <div class="brand-title">BTP</div>
        <div class="brand-sub">Boomkwekerij Taak Planner</div>
    </div>

    <div class="login-card">
        <div class="card-title">Gebruik de mobiele app</div>

        <p class="info-text" style="text-align:center; margin-bottom: 20px;">
            Je account is bedoeld voor gebruik via onze mobiele applicatie.
            Download de app hieronder om verder te gaan.
        </p>

        <div style="display:flex; flex-direction:column; gap:12px; margin-bottom:20px;">
            <a class="btn btn-login"
               href=""
               target="_blank">
                Download de app hier!
            </a>
        </div>

        <button class="btn btn-danger w-100" @onclick="GoToLogin">
            Terug naar login
        </button>
    </div>

    <div class="login-foot">Interne tool voor boomkwekerij takenbeheer</div>
</div>

@code {
    private void GoToLogin()
    {
        Navigation.NavigateTo("/logout", forceLoad: true);
    }
}
