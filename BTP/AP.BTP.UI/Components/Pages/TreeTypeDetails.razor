@page "/TreeType/{id:int}"
@rendermode InteractiveServer
@inject IHttpClientFactory ClientFactory
@inject NavigationManager Navigation
@inject IConfiguration Configuration

@using AP.BTP.Application.CQRS.TreeTypes

<div class="container-fluid slidein-animation">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <div class="fw-semibold">Boomsoort Details</div>
            <small class="text-muted">Volledige info van deze boomsoort</small>
        </div>
        <button class="btn btn-outline-secondary" @onclick="GoBack">Terug</button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5 text-muted">Laden...</div>
    }
    else if (error != null)
    {
        <div class="alert alert-danger">@error</div>
    }
    else if (treeType == null)
    {
        <div class="text-center py-5 text-muted">Niet gevonden.</div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-7">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-1">@treeType.Name</h5>
                        @if (!string.IsNullOrWhiteSpace(treeType.Description))
                        {
                            <div class="text-muted mb-3">@treeType.Description</div>
                        }

                        @if (treeType.TreeImages != null && treeType.TreeImages.Any())
                        {
                            <div class="d-flex flex-wrap gap-3">
                                @foreach (var f in treeType.TreeImages)
                                {
                                    <img src="@f.FileUrl" style="width:200px; height:140px; object-fit:cover;" class="rounded shadow-sm" />
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-muted">Geen afbeeldingen</div>
                        }
                    </div>
                </div>

                <div class="card shadow-sm mt-3">
                    <div class="card-body">
                        <h6 class="fw-semibold mb-3">Instructies per seizoen</h6>
                        @if (treeType.Instructions != null && treeType.Instructions.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var i in treeType.Instructions.OrderBy(x => x.Season))
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>@i.Season</span>
                                        <a class="btn btn-sm btn-outline-primary" href="@i.FileUrl" target="_blank">Open PDF</a>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="text-muted">Nog geen instructies</div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h6 class="fw-semibold mb-3">QR-code (huidige seizoen)</h6>
                        <img src="@qrUrl" alt="QR" class="img-fluid" style="max-width:320px;" />
                        <div class="small text-muted mt-2">Scan voor de onderhoudsplan van het huidige seizoen</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int id { get; set; }
    private TreeTypeDTO? treeType;
    private string qrUrl = string.Empty;
    private bool isLoading = true;
    private string? error;
    

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var client = ClientFactory.CreateClient("API");
            treeType = await client.GetFromJsonAsync<TreeTypeDTO>($"api/v1/TreeType/{id}");
            var publicBase = Configuration["Api:PublicBaseUrl"]?.TrimEnd('/') ?? string.Empty;
            var baseAddr = !string.IsNullOrWhiteSpace(publicBase)
                ? publicBase
                : client.BaseAddress?.ToString()?.TrimEnd('/') ?? string.Empty;
            if (treeType != null && !string.IsNullOrWhiteSpace(treeType.QrCodeUrl))
            {
                qrUrl = treeType.QrCodeUrl.StartsWith("http", StringComparison.OrdinalIgnoreCase)
                    ? treeType.QrCodeUrl
                    : $"{baseAddr}{treeType.QrCodeUrl}";
            }
        }
        catch (Exception ex)
        {
            error = ex.Message; 
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack() => Navigation.NavigateTo("/ManageTreeTypes");
}
