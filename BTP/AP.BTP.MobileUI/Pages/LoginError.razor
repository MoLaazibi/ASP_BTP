@page "/login-error"

<div class="login-page" style="padding: 1.25rem;">
    <div class="brand" style="text-align:center; margin-bottom: 1rem;">
        <img src="/favicon.png" alt="BTP" style="width:64px; height:64px;" />
        <div class="brand-title">BTP</div>
        <div class="brand-sub">Boomkwekerij Taak Planner</div>
    </div>

    <div class="login-card" style="padding: 1rem; border: 1px solid #eee; border-radius: 8px;">
        <div class="card-title" style="font-weight:600; margin-bottom: 0.5rem;">Je hebt (nog) geen rechten om in te loggen.</div>

        <p class="info-text" style="text-align:center; margin-bottom: 20px;">
            Eenmaal een administrator je toestemming geeft kan je inloggen op het platform.
        </p>

        <a class="btn btn-outline-secondary w-100" href="/logout">
            Terug naar login
        </a>
    </div>
</div>